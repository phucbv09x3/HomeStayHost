<?xml version="1.0" encoding="utf-8"?>
<layout>


    <data>

    </data>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_4sdp"
    android:background="#DDDDDD"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/name_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Phòng"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/btn_remove_room"
        app:layout_constraintTop_toTopOf="@id/name_room"
        app:layout_constraintRight_toRightOf="@id/status"
        android:background="@drawable/ic_baseline_clear_24"
        android:layout_width="@dimen/_14sdp"
        android:layout_height="@dimen/_14sdp"/>
    <TextView
        android:id="@+id/name_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Phong 101"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintLeft_toRightOf="@id/name_room_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Tình Trạng Đặt Phòng"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_room" />

    <TextView
        android:id="@+id/status"
        android:padding="@dimen/_2sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="Da dat"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_14sdp"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name_room" />


    <TextView
        android:id="@+id/tv_tra"
        android:text="Xác nhận trả phòng ?"
        android:visibility="gone"
        android:layout_marginTop="@dimen/_2sdp"
        android:padding="@dimen/_2sdp"
        android:background="@color/rdc"
        android:layout_marginBottom="@dimen/_2sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@id/status"
        app:layout_constraintRight_toRightOf="@id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>